@model Category
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class"fixx">
<div class="form-group offset-3 mb-3 col-lg-6">
    <label asp-for="Name" class="control-label"></label>
    @if (Model != null)
    {
        <input asp-for="Name" value="@Model.Name" class="form-control" />
    }
    else
    {
        <input asp-for="Name" class="form-control" />
    }
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group offset-3 mb-3 col-lg-6">
    <label asp-for="DesplayOrder" class="control-label"></label>
    @if (Model != null)
    {
        <input asp-for="DesplayOrder" value="@Model.DesplayOrder" class="form-control" />
    }
    else
    {
        <input asp-for="DesplayOrder" class="form-control" />
    }
    <span asp-validation-for="DesplayOrder" class="text-danger"></span>
</div>
</div>