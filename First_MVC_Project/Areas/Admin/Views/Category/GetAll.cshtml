@model List<Category>
<Partial name="_Notification" />

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="tex-primary">Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Add Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cat in Model)
            {
                <tr>
                    <td>@cat.Name</td>
                    <td>@cat.DesplayOrder</td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="category" asp-action="edit" asp-route-id="@cat.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="category" asp-action="delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
