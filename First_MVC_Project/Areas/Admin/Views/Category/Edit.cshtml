@model Category
<div class="card show border-0 mt-4">
    <div class="card-header  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h4 class="text-white py-2">Update Category</h4>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Edit" class="row">
            <div class="border p-3">
                <div class="fixx">
                <input asp-for="Id" type="hidden" />
                <Partial name="_EditAndAddPartial" model="@Model" />
                <div class="row">
                    <div class="offset-3 col-4">
                        <input type="submit" value="Update" class="btn btn-warning form-control" />
                    </div>
                    <div class="col-5">
                        <a class="btn btn-secondary form-control" asp-action="getall">Back to List</a>
                    </div>
                </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

